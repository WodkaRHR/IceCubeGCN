{
    "dataset" : {
        "type" : "hd5",
        "paths" : {
            "train" : "../data/train.hd5",
            "validation" : "../data/val.hd5",
            "test" : "../data/test.hd5"
        },
        "features" : [
            "ChargeFirstPulse", "ChargeLastPulse", "ChargeMaxPulse",
            "TimeFirstPulse", "TimeLastPulse", "TimeMaxPulse",
            "TimeStd"
        ],
        "coordinates" : [
            "COGCenteredVertexX", "COGCenteredVertexY", "COGCenteredVertexZ"
        ]
    },
    "model" : {
        "type" : "gcn",
        "hidden_units_graph_convolutions" : [64, 64, 64, 64, 64, 64, 64],
        "hidden_units_fully_connected" : [64, 5],
        "use_batchnorm" : true,
        "use_residual" : true,
        "dropout_rate" : 0.5
    },
    "training" : {
        "learning_rate" : 5e-2,
        "min_learning_rate" : 1e-6,
        "learning_rate_scheduler_patience" : 3,
        "batch_size" : 16,
        "epochs" : 5,
        "directory" : "./training/hd5-{0}",
        "checkpoint_period" : 1,
        "loss" : "categorical_cross_entropy"
    },
    "seed" : null
}
